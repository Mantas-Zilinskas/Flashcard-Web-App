@page
@model WebApplikacija.Pages.AddFlashcardModel
@{
    ViewData["Data"] = "Add a flashacard";
}
<!DOCTYPE html>
<html manifest="cache.manifest">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Flashcards</title>
    <link href="static/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .question-text {
            font-size: 28px
        }
    </style>
</head>
<body>
    <h3>Make a Flashcard</h3>
    <form method="post">
        <div>
            <label for="question">FlashCard Question:</label><br>
            <textarea id="question" name="question" rows="7" cols="100" placeholder="Where does England keep their armies?" required></textarea>
        </div>
        <br>
        <br>
         <div>
            <label for="answer">FlashCard Answer:</label><br>
            <textarea id="answer" name="answer" rows="7" cols="100" placeholder="In their sleevies!" required></textarea>
        </div>
        <br>
        <br>
        <div>
            <button type="submit" class="btn btn-primary" name="submitButton" value="submit" asp-page-handler="SubmitNewFlashcard">Submit</button>
            <a class="btn btn-primary" asp-area="" asp-page="/StudySet">Back</a>
        </div>
        
        <h4>@Model.flashcardCreationStatus</h4>
    </form>
</body>
</html>